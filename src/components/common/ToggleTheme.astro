---
import { Icon } from 'astro-icon/components';
import { UI } from 'astrowind:config';
import { twMerge } from 'tailwind-merge';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
  iconName?: string;
}

const {
  label = 'Toggle between Dark and Light mode',
  class: className = '',
  iconClass: iconClassName = '',
  iconName = 'tabler:sun',
} = Astro.props;

const defaultClass = 'text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center';
const defaultIconClass = 'w-6 h-6';

const mergedClass = twMerge(defaultClass, className);
const mergedIconClass = twMerge(defaultIconClass, iconClassName);
---

{
  !(UI.theme && UI.theme.endsWith(':only')) && (
    <button type="button" class={mergedClass} aria-label={label} data-aw-toggle-color-scheme>
      <Icon name={iconName} class={mergedIconClass} />
    </button>
  )
}
