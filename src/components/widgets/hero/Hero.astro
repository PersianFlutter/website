---
import { t } from 'i18next';

import { Image } from 'astro:assets';
import type { Widget } from '~/types';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { ImageMetadata } from 'astro';

import CurvedAnimation from '~/components/widgets/hero/CurvedAnimation.astro';
import HeroAnimations from '~/components/widgets/hero/HeroAnimations.astro';

// telegram Avatars
import telegramAvatar1 from '~/assets/images/telegram/telegram-avatar-1.jpg';
import telegramAvatar2 from '~/assets/images/telegram/telegram-avatar-2.jpg';
import telegramAvatar3 from '~/assets/images/telegram/telegram-avatar-3.jpg';
import telegramAvatar4 from '~/assets/images/telegram/telegram-avatar-4.jpg';
import telegramAvatar5 from '~/assets/images/telegram/telegram-avatar-5.jpg';

// telegram Icon & bg
import telegramIcon from '~/assets/images/telegram-icon.png';
import telegramSky from '~/assets/images/telegram-sky.jpg';

import youtubeIcon from '~/assets/images/youtube-icon.jpg';

//portrait images
import portraitImage1 from '~/assets/images/portraits/portrait-img-01.jpg';
import portraitImage2 from '~/assets/images/portraits/portrait-img-02.jpg';
import portraitImage3 from '~/assets/images/portraits/portrait-img-03.jpg';
import portraitImage4 from '~/assets/images/portraits/portrait-img-04.jpg';
import portraitImage5 from '~/assets/images/portraits/portrait-img-05.jpg';
import portraitImage6 from '~/assets/images/portraits/portrait-img-06.jpg';
import portraitImage7 from '~/assets/images/portraits/portrait-img-07.jpg';
import portraitImage8 from '~/assets/images/portraits/portrait-img-08.jpg';
import portraitImage9 from '~/assets/images/portraits/portrait-img-09.jpg';
import portraitImage10 from '~/assets/images/portraits/portrait-img-10.jpg';
import portraitImage11 from '~/assets/images/portraits/portrait-img-11.jpg';
import portraitImage12 from '~/assets/images/portraits/portrait-img-12.jpg';
import portraitImage13 from '~/assets/images/portraits/portrait-img-13.jpg';
import portraitImage14 from '~/assets/images/portraits/portrait-img-14.jpg';
import portraitImage15 from '~/assets/images/portraits/portrait-img-15.jpg';
import portraitImage16 from '~/assets/images/portraits/portrait-img-16.jpg';
import portraitImage17 from '~/assets/images/portraits/portrait-img-17.jpg';

export interface Props extends Widget {
  telegramIconImg?: ImageMetadata;
  telegramSkyImg?: ImageMetadata;
  youtubeIconImg?: ImageMetadata;
  telegramLink?: string;
  youtubeLink?: string;
}

interface HeroTranslations {
  title: {
    main: string;
    sub: string;
  };
  description: string[];
  socials: {
    telegram: {
      members: {
        text: string;
      };
      joinButton: string;
    };
    youtube: {
      description: string;
      button: string;
    };
  };
}

const translations = {
  title: t('home.hero.title', { returnObjects: true }) as HeroTranslations['title'] || { main: 'Default Title', sub: 'Default Subtitle' },
  description: t('home.hero.description', { returnObjects: true }) as string[] || ['Default Description'],
  socials: t('home.hero.socials', { returnObjects: true }) as HeroTranslations['socials'] || {
    telegram: { members: { text: 'Default Members' }, joinButton: 'Default Join Button' },
    youtube: { description: 'Default YouTube Description', button: 'Default Button' },
  },
};

const socialTranslations = {
  telegramMembers: translations.socials.telegram.members.text || 'Active Members',
  telegramJoinButton: translations.socials.telegram.joinButton || 'Join Telegram Channel',
  youtubeDescription: translations.socials.youtube.description || 'Access to latest videos and tutorials',
  youtubeButton: translations.socials.youtube.button || 'Subscribe',
};

const {
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
  telegramIconImg = telegramIcon,
  telegramSkyImg = telegramSky,
  youtubeIconImg = youtubeIcon,
  telegramLink = 'https://t.me/persian_flutter',
  youtubeLink = 'https://www.youtube.com/@PersianFlutter',
} = Astro.props;

const telegramMembers = [
  { image: { src: telegramAvatar1, alt: 'amir' } },
  { image: { src: telegramAvatar2, alt: 'alireza' } },
  { image: { src: telegramAvatar3, alt: 'mary' } },
  { image: { src: telegramAvatar4, alt: 'payam' } },
  { image: { src: telegramAvatar5, alt: 'reza' } },
];

const portraitImages = [
  { image: { src: portraitImage1, alt: 'portraitImage1' } },
  { image: { src: portraitImage2, alt: 'portraitImage2' } },
  { image: { src: portraitImage3, alt: 'portraitImage3' } },
  { image: { src: portraitImage4, alt: 'portraitImage4' } },
  { image: { src: portraitImage5, alt: 'portraitImage5' } },
  { image: { src: portraitImage6, alt: 'portraitImage6' } },
  { image: { src: portraitImage7, alt: 'portraitImage7' } },
  { image: { src: portraitImage8, alt: 'portraitImage8' } },
  { image: { src: portraitImage9, alt: 'portraitImage9' } },
  { image: { src: portraitImage10, alt: 'portraitImage10' } },
  { image: { src: portraitImage11, alt: 'portraitImage11' } },
  { image: { src: portraitImage12, alt: 'portraitImage12' } },
  { image: { src: portraitImage13, alt: 'portraitImage13' } },
  { image: { src: portraitImage14, alt: 'portraitImage14' } },
  { image: { src: portraitImage15, alt: 'portraitImage15' } },
  { image: { src: portraitImage16, alt: 'portraitImage16' } },
  { image: { src: portraitImage17, alt: 'portraitImage17' } },
];
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-full w-full px-0 md:px-0 py-0 md:py-0 lg:py-0 relative h-max ${classes?.container ?? ''}`}
  bg={bg}
>
  <div class="mx-auto max-w-[1320px] px-4 py-8 md:py-12 lg:py-16">
    <div class="flex flex-col gap-16 xl:flex-row xl:justify-between lg:gap-0">
      <!-- titles - socials -->
      <div class="flex flex-col lg:flex-row justify-between items-start gap-8 md:gap-12 lg:gap-20">
        <div class="hero">
          <div class="hero__content max-xl:flex">
            <div>
              <!-- main title -->
              <div
                class="hero__title inline-flex flex-col bg-gradient-to-b from-pfColorFirst to-pfColorThird text-transparent bg-clip-text text-start text-[#1733b8] text-5xl mb-5"
              >
                <h1 class="hero__title-main inline-flex flex-col w-max leading-loose font-bold h-max">
                  {translations.title.main}
                  <span class="block w-full h-2.5 bg-blue-700/20 -mt-10"></span>
                </h1>
                <h2 class="hero__title-sub inline-flex flex-col w-max leading-loose font-bold h-max pb-4">
                  {translations.title.sub}
                  <span class="block w-full h-2.5 bg-blue-700/20 -mt-[36px]"></span>
                </h2>
              </div>

              <!-- descriptions -->
              <div class="hero__description">
                {
                  (Array.isArray(translations?.description) ? translations.description : []).map((text) => (
                    <p class="hero__description-item text-start text-slate-700 text-xl font-normal">{text}</p>
                  ))
                }
              </div>
            </div>

            <!-- socials -->
            <div class="hero__socials mt-6 relative">
              <!-- telegram card -->
              <div class="flex flex-col sm:flex-row gap-3">
                <div
                  class="social-card social-card--telegram inline-flex flex-row gap-4 h-[70px] pe-6 ps-2.5 max-xl:ps-6 py-2.5 bg-[#eaeff4] rounded-full justify-center items-center max-xl:h-[150px] max-xl:rounded-3xl max-xl:flex-col max-xl:items-center"
                >
                  <div class="social-card__users flex flex-row-reverse justify-end items-center -gap-4">
                    {
                      telegramMembers
                        .toReversed()
                        .map((member, index) => (
                          <Image
                            src={member.image.src}
                            alt={member.image.alt}
                            class={`w-[50px] h-[50px] rounded-full shadow-lg border-2 border-white ${
                              index !== telegramMembers.length - 1 ? '-ms-4' : ''
                            } hover:-translate-x-1 hover:z-20 transition-transform duration-500`}
                            width={64}
                            height={64}
                          />
                        ))
                    }
                  </div>
                  <div
                    class="social-card__id flex flex-col justify-start align-top max-xl:justify-center max-xl:items-center"
                  >
                    <span class="rtl:text-end text-slate-800 text-sm font-medium h-5 ltr:text-start" dir="ltr"
                      >+1.7K</span
                    >
                    <span class="text-start text-slate-800 text-sm font-medium h-5"
                      >{socialTranslations.telegramMembers}</span
                    >
                  </div>
                </div>

                <!-- link to telegram -->
                <div
                  class="social-card social-card--telegram relative max-xl:h-[150px] max-xl:rounded-3xl max-xl:flex-col max-xl:items-center"
                >
                  <div id="highlight-telegram" class="absolute end-[-10px] top-[-10px] z-10">
                    <svg width="22" height="24" viewBox="0 0 22 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path
                        fill-rule="evenodd"
                        clip-rule="evenodd"
                        d="M7.3609 22.3967C5.26021 21.8097 3.06087 21.5136 0.927365 21.2423C0.467841 21.1855 0.0412044 21.5028 0.00838127 21.9499C-0.057265 22.3973 0.271159 22.8065 0.69786 22.8634C2.76572 23.1245 4.89903 23.404 6.90124 23.9691C7.32794 24.0916 7.78766 23.8393 7.91895 23.4053C8.05025 22.9716 7.7876 22.5196 7.3609 22.3967Z"
                        fill="#94A3B8"></path>
                      <path
