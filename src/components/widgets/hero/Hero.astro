                    fill="#94A3B8"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Fancy Images Flex Layout -->
      <div class="fancy-images w-full max-w-[632px] relative">
        <!-- Container for all rows  -->
        <div class="flex flex-col gap-4">
          <!-- Top Row  -->
          <div class="flex justify-center gap-4">
            <div class="relative">
              <div id="portrait-top-left" class="w-[200px] h-[150px] rounded-[44px] bg-yellow-300 overflow-hidden">
                <Image
                  src={portraitImages[0].image.src}
                  alt={portraitImages[0].image.alt}
                  class="w-full h-full object-cover"
                  width={200}
                  height={150}
                />
              </div>
            </div>

            <div class="relative">
              <div id="portrait-top-right" class="w-[200px] h-[150px] rounded-[44px] bg-orange-200 overflow-hidden">
                <Image
                  src={portraitImages[1].image.src}
                  alt={portraitImages[1].image.alt}
                  class="w-full h-full object-cover"
                  width={200}
                  height={150}
                />
              </div>
            </div>
          </div>

          <!-- Middle Row  -->
          <!-- Middle Row  -->
          <div class="flex justify-center gap-4">
            <div class="relative">
              <div id="portrait-middle-left" class="w-[200px] h-[150px] rounded-[44px] bg-gray-100 overflow-hidden">
                <Image
                  src={portraitImages[2].image.src}
                  alt={portraitImages[2].image.alt}
