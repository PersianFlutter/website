              <div id="portrait-bottom-right" class="w-[200px] h-[150px] rounded-[44px] bg-green-400 overflow-hidden">
                <Image
                  src={portraitImages[6].image.src}
                  alt={portraitImages[6].image.alt}
                  class="w-full h-full object-cover"
                  width={200}
                  height={150}
                />
