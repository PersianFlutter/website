---
import Layout from '~/layouts/PageLayout.astro';
import '~/assets/styles/custom.css';
import StaffSection from '~/components/widgets/StaffSection.astro';
import CafeFlutterSection from '~/components/widgets/CafeFlutterSection.astro';
import HeroSection from '~/components/widgets/hero/Hero.astro';
import Donation from '~/components/widgets/Donation.astro';
import i18n from '~/utils/i18n';

const metadata = {
  title: 'Persin Flutter',
  ignoreTitleTemplate: true,
};

i18n.setLang(Astro.currentLocale);
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <HeroSection telegramLink="https://t.me/persian_flutter" youtubeLink="https://www.youtube.com/@PersianFlutter" />

  <CafeFlutterSection />

  <StaffSection />

  <Donation donationLink="/" />
</Layout>
